<div class="banner">
    <h1 tabindex="0">Persoonsgegevens</h1>
</div>

<main class="gegevens">
    <section class="section1">
        <article>
            <h3>
                Vul hier je persoonsgegevens in
            </h3>
            <form action="/" id="gegevens">
                <label for="fname">Naam</label>
                <input type="text" id="fname" class="nameInput" name="fname" placeholder="Voornaam"><br>
                <label for="lname">Achternaamaam</label>
                <input type="text" id="lname" class="nameInput" name="lname" placeholder="Achternaam"><br>
                <label for="email">E-mailadres:</label>
                <input type="email" id="email" name="email"  placeholder="Email@mail.nl"><br>
    </section>
    <section class="section2">
        <input type="checkbox" id="agreement" name="agreement">
        <label for="agreement">Ik ga akkoord met de algemene voorwaarden en de regels voor veilig bezoek en verklaar dat
            ik en mijn huisgenoten geen gezondheidsklachten hebben (neusverkoudheid, loopneus, keelpijn, lichte hoest,
            verhoging, koorts (boven 38 graden Celsius) en/of benauwdheid). *</label>
    </section>
    <!-- <input type="submit" class="button" value="Submit"> -->

    </form>
    </article>
</main>
<script>
    let formName = document.getElementById("fname");
    let formEmail = document.getElementById("email");
    let formAgree = document.getElementById("agreement");

    formAgree.addEventListener("click", setLocalStorage);

    function setLocalStorage() {
        localStorage.setItem('fname', formName.value);
        localStorage.setItem('email', formEmail.value);
        console.log(localStorage)
    };
</script>
